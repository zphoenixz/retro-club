<!DOCTYPE html>
<html>
<head>
<link rel="stylesheet" href="cart_summary.css">
<title>Shortcuts</title>
</head>
<body>
    <form name="header" action="/admin/cart" method="get">
        <input type="image" src="images/titles/shopping_cart.png" width="30" height="30" />
    </form>    

    <form name="header" action="/sign" method="get">
        <input type="image" src="images/titles/exit.png" width="30" height="30" />
    </form>    

    <article id=mainContainer>

        <form action="/admin/home" method="get">
            <input type="image" src="images/title/home.png" name="home" width="30" height="30"/>
        </form> 

        <center>
            <img src="images/title/cart_summary.png" width="339" height="113">
        </center>
        
        <article id="column1">
            <h3>Items</h3>

            <form action="" method="get">
                <input type="text" name="item" readonly>
            </form>
            
            <form action="" method="get">
            <input type="image" src="images/title/eye.png" name="edit" width="30" height="30"/>
            </form>

            <form action="" method="">
                <input type="image" src="images/title/delete.png" name="delete" width="30" height="30"/>
            </form>
        </article>    
             
        <article id="column2">
            <form action="" method="get">
                <input type="text" name="customer_id" readonly><br>
                <select id="days">
                    <option value="">Number of days</option>
                </select><br>                 
                <input type="text" name="pre_total" value="Pre total:" readonly>
                <input type="text" name="pre_total_bs" readonly><br>
                <input type="text" name="discount" value="Discount:" readonly>
                <input type="text" name="discount_p" readonly>
                <input type="text" name="discount_bs" readonly><br>
                <input type="text" name="total" value="Total:" readonly>
                <input type="text" name="total_bs" readonly>
                <button type="submit">Pay</button>
            </form>
        </article>
    </article>
</body>
</html>
